{% extends '::base.html.twig' %}

{% block body %}
    <div class="zone" id="z0">
        <div class="zbackground"></div>
    </div>

    <div>
        <ul>
            {% set i = 0 %}
            {% for parties in user.parties %}
                {% for partie in parties %}
                    {% if partie is not empty %}
                        <li><a href="{{ path('mesparties') }}">{{ partie.id }}</a></li>
                        {% set i = i + 1 %}
                    {% endif %}
                {% endfor %}
            {% endfor %}

            {% if i == 0 %}
                Aucune partie en cours. <a href="{{ path('index') }}">Créer une partie</a>
            {% endif %}
        </ul>
    </div>

    <a href="{{ path('jouer') }}">Créer une nouvelle partie</a>
{% endblock %}