{% trans_default_domain 'FOSUserBundle' %}

<section id="contact">
    <div class="row">
        <div class="col-lg-12 col-sm-12 col-xs-12 contactform">
            <h2>Editer votre profil</h2>

            <div class="span4 offset2">
                    {{ form_start(form, { 'method': 'post', 'action': path('fos_user_profile_edit'), 'attr': { 'class': 'fos_user_profile_edit' } }) }}
                    <div class="form-group" id="fos_user_registration_form">
                        <label for="email">{{ 'form.email'|trans }}</label>
                        {{ form_widget(form.email, { 'attr': {'class': 'form-control', 'placeholder': 'form.email'|trans } }) }}
                        {{ form_errors(form.email) }}

                        <label for="username">{{ 'form.username'|trans }}</label>
                        {{ form_widget(form.username, { 'attr': {'class': 'form-control', 'placeholder': 'form.username'|trans } }) }}
                        {{ form_errors(form.username) }}

                        <!--<label for="password">{{ 'form.current_password'|trans }}</label>
                        {{ form_widget(form.current_password, { 'attr': {'class': 'form-control', 'placeholder': 'form.current_password'|trans } }) }}
                        {{ form_errors(form.current_password) }} -->

                        {{ form_rest(form) }}

                    </div>

                                <div>
                                <input class="btn btn-block btn-primary" type="submit" value="{{ 'profile.edit.submit'|trans }}" />
                            </div>
                        {{ form_end(form) }}

            </div>
        </div>
    </div>
</section>